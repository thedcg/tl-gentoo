################################
# Dockerfile: thedcg/tl-gentoo_prep2:latest

# ベース
FROM thedcg/tl-gentoo_prep1:latest

################################
# prep2/Dockerfile

# 管理者
#MAINTAINER Lemures Lemniscati <lemures.lemniscati@gmail.com>

# パッケージ
RUN date --iso-8601=ns\
 && emerge\
	app-arch/cpio\
	app-arch/lzip\
	app-arch/rpm2targz\
	app-crypt/gnupg\
	app-crypt/pinentry\
	app-eselect/eselect-lib-bin-symlink\
	app-text/libpaper\
	app-text/poppler-data\
	app-text/psutils\
	app-text/t1utils\
	dev-lang/nasm\
	dev-libs/kpathsea\
	dev-libs/lzo\
	dev-libs/npth\
	dev-libs/libassuan\
	dev-libs/nettle\
	dev-libs/libksba\
	dev-perl/Authen-SASL\
	dev-perl/IO-Socket-SSL\
	dev-perl/IO-Tty\
	dev-perl/Net-SMTP-SSL\
	dev-scheme/guile\
	media-fonts/liberation-fonts\
	media-gfx/sam2p\
	media-libs/jbig2dec\
	media-libs/lcms\
	media-libs/libpng\
	media-libs/openjpeg\
	media-libs/tiff\
	net-dns/libidn\
	net-libs/gnutls\
	sys-apps/ed\
	sys-libs/binutils-libs\
	virtual/jpeg\
	virtual/perl-Digest-MD5\
	virtual/perl-MIME-Base64\
	virtual/perl-Scalar-List-Utils\
	virtual/ttf-fonts\
	'='virtual/perl-Digest-SHA-5.950.0-r4\
	'='virtual/perl-IO-1.350.0-r2\
	'='virtual/perl-libnet-3.50.0-r2\
 && date --iso-8601=ns

# 終了
